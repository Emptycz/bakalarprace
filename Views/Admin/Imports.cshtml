<div class="mx-auto">
    <h1 class="text-center"> Seznam nahraných záznamů </h1>
</div>

<table class="table margin-top-10">
    <thead>
        <tr>
            <th> ID Záznamu </th>
            <th> Název záznamu </th>
            <th> Autor záznamu </th>
            <th> Datum nahrání </th>
            <th> Lokace </th>
            <th> Operace </th>
        </tr>
    </thead>
    <tbody>
        @{ foreach (Record rc in ViewBag.Records)
                        {
            <tr>
                <td> @rc.ID </td>
                <td> @rc.Name </td>
                <td> @rc.Author.Firstname @rc.Author.Lastname</td>
                <td> @rc.Uploaded </td>
                <td> @rc.Location </td>
                <td>
                    
                    <a class="btn js_openModal" href="/Admin/RemoveImport?RecordId=@rc.ID" data-id="@rc.ID" data-toggle="modal" data-target="#exampleModalCenter"> <i class="material-icons" style="color: red"> clear </i> </a>
                </td>
            </tr> } }
    </tbody>
</table>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Smazat záznam</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-center text-danger"> Tuto akci nelze vrátit, opravdu ji chcete provést?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zrušit akci</button>
                <a class="btn btn-danger js_removeRecordButton" href="#!"> Odstranit záznam </a>
            </div>
        </div>
    </div>
</div>


